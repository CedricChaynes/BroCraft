<h1>Users#my_profil</h1>



<%= simple_form_for(current_user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,
                required: true,
                input_html: { autocomplete: "Choose a username" }%>
    <%= f.input :mobile,
                required: false,
                input_html: { autocomplete: "Mobile Phone" }%>
    <%= f.input :address,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Address" }%>


  </div>

  <div class="form-actions">
    <%= f.button :submit, "update" %>
  </div>
<% end %>




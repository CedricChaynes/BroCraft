<div class="container search_console">
  <h1 class="text-center">Mon profil</h1>
  <div class="d-flex">
    <div class="container">
      <%= cl_image_tag current_user.avatar.url, width: 400, height: 400, crop: :crop, gravity: :face %>
    </div>
    <div class="container">
      <%= simple_form_for(current_user) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username,
                      required: true,
                      input_html: { autocomplete: "Choisissez votre username" }%>
          <%= f.input :mobile,
                      required: false,
                      input_html: { autocomplete: "Téléphone Mobile" }%>
          <%= f.input :address,
                      required: true,
                      input_html: { autocomplete: "Adresse" }%>
          <%= f.input :avatar %>
          <%= f.input :avatar_cache, as: :hidden %>
        </div>

        <div class="form-actions text-right">
          <%= f.button :submit, "Mettre à jour", class:"btn-red" %>
        </div>
      <% end %>

            <%= link_to "Modifier mot de passe", edit_user_registration_path, class: "btn-blue" %>
            <%= link_to "Retour", root_path, class: "btn-blue" %>
    </div>
  </div>
</div>


          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <p class="accroche">Become a HandyBro renter</p>
          <span class="nav-connexion">
          <%= link_to "Se connecter", new_user_session_path, class: 'btn-bc-light btn-inscr' %>
          <%= link_to "S'inscrire", new_user_registration_path, class: 'btn-bc-light btn-inscr' %>
          </span>
        </li>
      <% end %>

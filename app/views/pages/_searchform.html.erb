<%= simple_form_for :searchform, url: search_tools_path, method: "GET" do |f| %>
<div class="row">
  <div class="col-3">
    <div>
      <%= f.input :category, label: false, as: :select2, collection: Tool.pluck(:category).uniq %>
      <%= f.input :name, label: false, input_html: {value: "", placeholder: 'Cherchez un outil', size: 21} %>
      <script>document.querySelectorAll('#searchform_category option')[0].innerText = 'Catégorie'</script>
    </div>
  </div>

  <div class="col-7">
    <div class="form-inline">
      <div class="d-flex text-center">
        <h5>De</h5>
        <div>
          <%= f.input :start_date, label: false, as: :date, html5: true, input_html: {min: Date.today } %>
        </div>
        <h5>À</h5>
        <div class="ml-3">
          <%= f.input :end_date, label: false, as: :date, html5: true, input_html: {min: Date.today }  %>
        </div>
      </div>
    </div>
    <div style="margin-top: 16px; width: 460px">
      <span style="display: block;overflow: hidden;"><%= f.input :address, label: false, input_html: {placeholder: 'Ville'} %></span>
    </div>
  </div>
  <div class="col-2">
    <%= f.button :submit, 'Go!', class: "btn-red", id: "submit-search" %>
  </div>
</div>
<% end %>

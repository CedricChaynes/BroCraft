<div class="container">
  <div class="row text-justify" style="margin-top: 30px; margin-bottom: 0px">
    <div class="col-5 container form_console form_my_profile">
      <div class="d-flex">
        <div class="container text-center" style="margin-top: 20px">
          <h1><%= @tool.name %></h1>
          <img class="img_show_tool" src=<%="#{@tool.photo}"%>>
        </div>
      </div>
    </div>

    <div class="col-6 container form_console form_my_profile">
      <div class="container text-justify mb-3 p-3">
        <h3>Description</h3>
        <p><%= @tool.description %></p>
      </div>
      <div class="container text-justify mb-3">
        <h4 style="color: #fc3c3c"><%= '%.2f' % @tool.price_per_day %> € / jour</h4>
      </div>

      <% if @tool.owner == @user %>
        <%= link_to "Edit Tool Info", edit_tool_path(@tool), class: 'btn-red' %>
      <% else %>
        <%= simple_form_for [@tool, @booking] do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :start_date, label: "Date de début", as: :date, html5: true, input_html: {min: Date.today } %>
            <%= f.input :end_date, label: "Date de fin", as: :date, html5: true, input_html: {min: Date.today } %>
          </div>

          <div class="form-actions center_bc_btn">
            <%= f.button :submit, 'Book' ,class: 'btn-red' %>
          </div>
         <% end %>
      <% end %>





    </div>
  </div>
</div>




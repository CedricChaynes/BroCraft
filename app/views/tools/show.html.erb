          <h1><%= @tool.name %></h1>
          <img style="width: 50vh" src=<%="#{@tool.photo_url}"%>>
        </div>
      </div>
    </div>

    <div class="col-3 border m-3 p-3 text-left" style="background-color:white">
      <div class="container border text-justify mb-3">
        <h3>Preparation</h3>
        <p><%= @tool.description %></p>
      </div>
      <div class="container border text-justify mb-3">
        <h4>Number of uses: <%= @tool.bookings.count %></%></h4>
        <h4><%= '%.2f' % @tool.price_per_day %> â‚¬ / day</h4>
      </div>
